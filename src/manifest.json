{
  "manifest_version": 3,
  "name": "Tooling migration visual helper",
  "version": "1.0.0",
  "description": "Make the old and the new jira instance easily recognisible",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "tmvh.html",
    "default_icon": "tmvh.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*"
      ],
      "js": ["tmvh.js"]
    }]
}